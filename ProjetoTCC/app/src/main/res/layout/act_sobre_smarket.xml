<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.talit.projetotcc.activities.SobreSmarket">

    <ScrollView
        android:id="@+id/dado_est"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/dados_smarket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessParent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="03dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_valor_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic_public_black_24dp"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_nossos_contatos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/im_valor_total"
                        android:maxLines="3"
                        android:padding="20dp"
                        android:text="@string/nosso_contato"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/divi_04"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_nossos_contatos"
                        android:layout_margin="4dp"
                        android:background="#ACACAC" />

                    <ImageView
                        android:id="@+id/im_facebook"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="05dp"
                        android:layout_below="@+id/divi_04"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/ic_facebook"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_valor_total_compra"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/divi_04"
                        android:layout_toEndOf="@+id/im_facebook"
                        android:layout_marginBottom="05dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:text="smarket.aplicativo"
                        android:inputType="text"
                        android:maxLength="14"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded,TextViewEdits"
                        tools:targetApi="m" />

                    <View
                        android:id="@+id/divider_quatro"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_valor_total_compra"
                        android:layout_margin="4dp"
                        android:background="#DCDCDC" />

                    <ImageView
                        android:id="@+id/im_site"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="05dp"
                        android:layout_below="@+id/divider_quatro"
                        android:layout_marginTop="13dp"
                        android:tint="#DCDCDC"
                        android:src="@drawable/ic_language_black_24dp"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_desc_site"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/divider_quatro"
                        android:layout_toEndOf="@+id/im_site"
                        android:layout_marginBottom="05dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:text="smarketapp.com.br"
                        android:inputType="text"
                        android:maxLength="14"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded,TextViewEdits"
                        tools:targetApi="m" />

                    <View
                        android:id="@+id/divider_cinco"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_desc_site"
                        android:layout_margin="4dp"
                        android:background="#DCDCDC" />

                    <ImageView
                        android:id="@+id/im_email"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="05dp"
                        android:layout_below="@+id/divider_cinco"
                        android:layout_marginTop="13dp"
                        android:tint="#DCDCDC"
                        android:src="@drawable/ic_email_black_24dp"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_desc_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/divider_cinco"
                        android:layout_toEndOf="@+id/im_email"
                        android:layout_marginBottom="05dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:text="smarketApp@smarket.com"
                        android:inputType="text"
                        android:maxLength="14"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded,TextViewEdits"
                        tools:targetApi="m" />

                    <View
                        android:id="@+id/divider_seis"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_desc_email"
                        android:layout_margin="4dp"
                        android:background="#DCDCDC" />

                    <ImageView
                        android:id="@+id/im_telefone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="05dp"
                        android:layout_below="@+id/divider_seis"
                        android:layout_marginTop="13dp"
                        android:tint="#DCDCDC"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_desc_tel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/divider_seis"
                        android:layout_toEndOf="@+id/im_telefone"
                        android:layout_marginBottom="05dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:text="(19)38176-5539"
                        android:inputType="text"
                        android:maxLength="14"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded,TextViewEdits"
                        tools:targetApi="m" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="03dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_versao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/ic_phone_android_black_24dp"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/txt_versao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/im_versao"
                        android:maxLines="3"
                        android:padding="20dp"
                        android:text="@string/versaoapp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/divi_sete"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt_versao"
                        android:layout_margin="4dp"
                        android:background="#ACACAC" />


                    <TextView
                        android:id="@+id/txtdescversao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/divi_sete"
                        android:layout_marginBottom="05dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginStart="05dp"
                        android:layout_marginTop="10dp"
                        android:text="1.0"
                        android:inputType="text"
                        android:maxLength="14"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded,TextViewEdits"
                        tools:targetApi="m" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
