<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="05dp"
    android:paddingEnd="05dp"
    android:layout_marginTop="05dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="01dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="03dp"
        app:cardElevation="03dp"
        app:contentPaddingBottom="03dp">

        <RelativeLayout
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="#D7D6D6">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_status"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="17dp"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/numeroPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/im_status"
                android:layout_marginTop="10dp"
                android:text="@string/txt_numero_pedido"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valorPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numeroPedido"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/im_status"
                android:layout_marginTop="11dp"
                android:textSize="10sp"
                android:text="@string/txt_valor_pedido"
                android:textStyle="normal"
                tools:ignore="SmallSp" />


            <TextView
                android:id="@+id/data_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valorPedido"
                android:layout_toEndOf="@+id/im_status"
                android:layout_marginStart="23dp"
                android:layout_marginTop="05dp"
                android:textSize="10sp"
                android:text="@string/txt_data_pedido"
                android:textStyle="normal"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/data_pedido"
                android:layout_marginStart="23dp"
                android:layout_marginTop="05dp"
                android:layout_toEndOf="@+id/im_status"
                android:textSize="10sp"
                android:text="@string/txt_status_pedido"
                android:textStyle="normal"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/estabelecimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginStart="23dp"
                android:layout_marginTop="05dp"
                android:layout_toEndOf="@+id/im_status"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"
                android:text="@string/txt_estabelecimento"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/im_edt"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="06dp"
                android:layout_marginTop="05dp"
                android:layout_alignParentEnd="true"
                android:tint="#02243b"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/idEstab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cidade"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="idestab"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="HardcodedText,UnknownIdInLayout" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cidade_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/estado_id"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>