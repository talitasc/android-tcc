<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.talit.projetotcc.activities.CentralAtendmento">

    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4002243b">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/central_subtitulo"
            android:textColor="#02243b"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignBottom="@+id/txtTitulo"
            android:layout_alignTop="@+id/txtTitulo"
            android:layout_toEndOf="@+id/txtTitulo"
            android:src="@drawable/hello"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_marginEnd="05dp"
        android:layout_marginStart="05dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bordas_editext_cinza">

        <TextView
            android:id="@+id/txtFaleCom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="05dp"
            android:gravity="center"
            android:text="@string/centra_fale"
            android:textColor="#02243b"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFaleCom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:text="@string/centra_fale_phone"
            android:textColor="#02243b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtPhonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFaleCom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="02dp"
            android:layout_toEndOf="@+id/txtPhone"
            android:text="0800-0808808"
            android:textColor="#02243b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPhone"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:text="@string/centra_fale_email"
            android:textColor="#02243b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtEmailSmarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPhone"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="07dp"
            android:layout_toEndOf="@+id/txtEmail"
            android:text="smarket@gmail.com"
            android:textColor="#02243b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEmail"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:text="@string/centra_fale_face"
            android:textColor="#02243b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtEmailFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEmail"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="07dp"
            android:layout_toEndOf="@+id/txtFace"
            android:text="smarket.aplicativo"
            android:textColor="#02243b"
            android:textSize="10sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/perguntasFreq"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_below="@id/relativeLayout"
        android:background="@drawable/bordas_editext_cinza"
        android:layout_marginEnd="05dp"
        android:layout_marginStart="05dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/duv_freq"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/txtPer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duv_freq"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="07dp"
            android:gravity="center_horizontal"
            android:text="@string/centra_fale_pergunta"
            android:textColor="#02243b"
            android:textSize="10sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/perguntasChat"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginEnd="05dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginStart="05dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bordas_editext_cinza"
        android:layout_toEndOf="@id/perguntasFreq">

        <ImageView
            android:id="@+id/duv_chat"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/laptop"/>

        <TextView
            android:id="@+id/txtChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duv_chat"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="05dp"
            android:layout_marginTop="07dp"
            android:gravity="center_horizontal"
            android:text="@string/centra_fale_chat"
            android:textColor="#02243b"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4002243b">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/txtNoResol"
            android:layout_alignTop="@+id/txtNoResol"
            android:src="@drawable/phone_smarket"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtNoResol"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_toEndOf="@+id/imageView3"
            android:text="@string/centra_fale_naoresl"
            android:textColor="#02243b"
            android:textSize="13sp" />



    </RelativeLayout>


</RelativeLayout>
